<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCauHoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="Câu hỏi: " />

    <TextView
        android:id="@+id/txtDapAnChon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="Đáp án của bạn:" />

    <TextView
        android:id="@+id/txtDapAnDung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#304FFE"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="Câu trả lời đúng:" />

    <TextView
        android:id="@+id/txtLoiGiai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="#5C12B5"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="Lời giải:" />
</LinearLayout>